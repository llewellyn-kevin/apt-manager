{
  "manifest_version": 2,
  "name": "Automated Reminders",
  "description": "Automate email and text reminders from Google Calendar events",
  "version": "1.0",
  "author": "Cyperion",
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "tab-icon.png",
    "default_title": "Keep Changing the World!"
  },

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "permissions": ["activeTab"]
}

