{
  "manifest_version": 2,
  "name": "Appointment Manager",
  "description": "Automate email and text reminders from Google Calendar events",
  "version": "1.0.1",
  "author": "Cyperion",
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "tab-icon.png",
    "default_title": "Keep Changing the World!"
  },

  "background": {
    "persistent": false,
    "scripts": ["popup.js", "settings.js"]
  }
}

